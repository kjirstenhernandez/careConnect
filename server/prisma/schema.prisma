
// Generator for Prisma Client JS
generator client {
  provider = "prisma-client-js"
}

// Configuring the database
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Represents a healthcare Provider
model Providers {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  firstName   String
  lastName    String
  credentials String[]
  specialty   String
  locations   Location[]
  phone       String
  fax         String
  imageUrl    String?
}

// Represents a medical Clinic
model Clinics {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  name          String @unique
  streetAddress String
  city          String
  zip           String
  phone         String
  fax           String
}

// Type created to represent a clinic in the embedded location field under providers
type Location {
  id   String
  city String
}
