{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "commonjs",
    "rootDir": ".",
    "moduleResolution": "node",
    "types": ["node"],
    "resolveJsonModule": true,
    "outDir": "./dist", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true 
  },
  "include": ["*.ts", "controllers/**/*.ts", "middleware/**/*.ts", "prisma/**/*.ts", "routes/**/*.ts", "services/**/*.ts", "utilities/**/*.ts"]
}