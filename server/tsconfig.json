{"typeAcquisition": {
  "enable": true,
  "include": ["node", "express", "jest"]
},
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "moduleResolution": "node",
    "types": ["node", "express", "jest"],
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "controllers/**/*.ts",
    "middleware/**/*.ts",
    "prisma/**/*.ts",
    "routes/**/*.ts",
    "services/**/*.ts",
    "**/__tests__/**/*.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
