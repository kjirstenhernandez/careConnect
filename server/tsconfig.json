{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "commonjs",
    "rootDir": ".",
    "moduleResolution": "node",
    "types": ["node"],
    "resolveJsonModule": true,
    "outDir": "./dist", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true 
  }
}